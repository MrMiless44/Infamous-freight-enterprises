# Core application settings
NODE_ENV=development

# API service
API_PORT=4000
API_BASE_PATH=/api
API_HOST=0.0.0.0

# Web client
WEB_PORT=3000
VITE_API_BASE_URL=/api
VITE_API_PROXY_TARGET=http://api:4000

# Database
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=infamous
POSTGRES_PASSWORD=infamouspass
POSTGRES_DB=infamous_freight
DATABASE_URL=postgresql://infamous:infamouspass@postgres:5432/infamous_freight

# Redis (optional, for queues/workers)
REDIS_URL=redis://redis:6379

# Worker/Queues
AI_QUEUE_NAME=ai-commands

# Authentication (JWT)
# Use either JWT_SECRET (single key) or rotation pair below
JWT_SECRET=dev-secret-key-change-in-production
# JWT_SECRET_CURRENT=dev-secret-key-change-in-production
# JWT_SECRET_PREVIOUS=previous-secret-if-rotating

# AI Synthetic Engine
# Prefer AI_SYNTHETIC_ENGINE_URL; AI_ENGINE_URL is also accepted
AI_SYNTHETIC_ENGINE_URL=http://ai-engine:8080
AI_SYNTHETIC_API_KEY=changeme

# Codecov
CODECOV_TOKEN=your_codecov_token_here

# Tooling
CHOKIDAR_USEPOLLING=true
