# Core application settings
NODE_ENV=development

# API service
API_PORT=4000
API_BASE_PATH=/api
API_HOST=0.0.0.0

# Web client
WEB_PORT=3000
VITE_API_BASE_URL=/api
VITE_API_PROXY_TARGET=http://api:4000

# Database
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_USER=infamous
POSTGRES_PASSWORD=infamouspass
POSTGRES_DB=infamous_freight
DATABASE_URL=postgresql://infamous:infamouspass@postgres:5432/infamous_freight

# Security
JWT_SECRET=your_jwt_secret_here_generate_with_openssl_rand_base64_32
CORS_ORIGINS=http://localhost:3000,http://localhost:4000

# AI Services (optional - synthetic fallback if not provided)
AI_PROVIDER=synthetic
OPENAI_API_KEY=sk-your_openai_key_here
ANTHROPIC_API_KEY=sk-ant-your_anthropic_key_here

# Billing Integration (optional)
STRIPE_SECRET_KEY=sk_test_your_stripe_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here
STRIPE_SUCCESS_URL=http://localhost:3000/billing/success
STRIPE_CANCEL_URL=http://localhost:3000/billing/cancel

PAYPAL_CLIENT_ID=your_paypal_client_id_here
PAYPAL_CLIENT_SECRET=your_paypal_client_secret_here
PAYPAL_SECRET=your_paypal_secret_here

# Voice/AI Services (optional)
VOICE_MAX_FILE_SIZE_MB=10
AI_SYNTHETIC_ENGINE_URL=http://localhost:8080
AI_SYNTHETIC_API_KEY=test-key

# Monitoring (optional)
SENTRY_DSN=https://your_sentry_dsn_here@sentry.io/project_id
LOG_LEVEL=info

# Rate Limiting (optional - defaults applied if not set)
RATE_LIMIT_POINTS=100
RATE_LIMIT_DURATION=60

# Codecov
CODECOV_TOKEN=your_codecov_token_here

# Tooling
CHOKIDAR_USEPOLLING=true
