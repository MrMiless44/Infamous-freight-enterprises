# Codex CLI Configuration Template
# Copy this file to config.toml and customize for your needs
# cp config.toml.example config.toml

# Model selection (uncomment to override defaults)
# model = "gpt-4o"
# reasoning_model = "o1"

# Execution policy
# execpolicy = "strict"  # Options: strict, permissive, auto-approve

# Edit mode preference
# edit_mode = "whole"    # Options: whole, diff, undecided

# Auto-approve specific commands (use with caution)
# [[auto_approve]]
# command = "npm install"
# reason = "Package installation is safe"

# MCP servers (Model Context Protocol)
# Uncomment and configure if using external tools/data sources
# [mcp_servers.filesystem]
# command = "npx"
# args = ["-y", "@modelcontextprotocol/server-filesystem", "/workspaces/Infamous-freight-enterprises"]

# Workspace-specific settings
[workspace]
# Ignore patterns for file operations
ignore = [
  "node_modules/",
  "dist/",
  "build/",
  ".next/",
  "coverage/",
  "*.log"
]

# Project context (helps Codex understand your stack)
[context]
description = "Infamous Freight Enterprises - Full-stack freight management platform"
tech_stack = ["Node.js", "Next.js", "TypeScript", "PostgreSQL", "Prisma", "Express", "React Native"]
architecture = "pnpm monorepo with api/, web/, mobile/, and packages/shared/"
