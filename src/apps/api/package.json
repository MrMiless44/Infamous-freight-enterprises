  "copyright": "© 2025 Infæmous Freight. All Rights Reserved.",
  "private": true,
  "type": "module",
  "scripts": {
    "prebuild": "pnpm run prisma:generate",
    "dev": "tsx watch src/server.ts",
    "build": "tsc",
    "start": "node dist/server.js",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "test:coverage": "NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "lint": "echo 'Linting handled by root eslint config'",
    "typecheck": "tsc --noEmit",
    "prisma:generate": "node ./scripts/prisma-generate.mjs",
    "prisma:migrate": "prisma migrate deploy",
    "prisma:migrate:dev": "prisma migrate dev",
    "prisma:studio": "prisma studio",
    "prisma:seed": "node prisma/seed.js",
    "clean": "rm -rf dist coverage"
  },
  "dependencies": {
    "@infamous-freight/shared": "workspace:*",
    "@paypal/paypal-server-sdk": "^1.0.4",
    "@prisma/client": "^5.22.0",
    "bcrypt": "^5.1.1",
    "express-rate-limit": "^7.4.0",
    "isomorphic-dompurify": "^2.11.0",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^5.2.1",
    "express-validator": "^7.3.1",
    "json2csv": "^5.0.7",
    "jsonwebtoken": "^9.0.3",
    "multer": "^2.0.2",
    "node-cron": "^3.0.3",
    "nodemailer": "^7.0.12",
    "helmet": "^7.1.0",
    "pdfkit": "^0.15.2",
    "prom-client": "^15.1.3",
    "rate-limiter-flexible": "^5.0.5",
    "redis": "^4.7.1",
    "socket.io": "^4.8.3",
    "stripe": "^20.1.0",
    "swagger-jsdoc": "^6.2.8",
    "rate-limit-redis": "^3.1.0",
    "winston": "^3.19.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/dompurify": "^3.0.5",
    "@types/jest": "^29.5.14",
    "@types/json2csv": "^5.0.7",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^22.19.3",
    "@types/node-cron": "^3.0.11",
    "@types/pdfkit": "^0.13.9",
    "@types/supertest": "^6.0.3",
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0",
    "prisma": "^5.22.0",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.6",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
