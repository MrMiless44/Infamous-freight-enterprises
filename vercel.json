{
  "version": 2,
  "buildCommand": "pnpm install && pnpm --filter @infamous-freight/shared build && pnpm --filter infamous-freight-web build",
  "installCommand": "pnpm install",
  "outputDirectory": "web/.next",
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "https://infamous-freight-api.fly.dev/api/$1"
    }
  ],
  "env": {
    "NEXT_PUBLIC_API_BASE": "https://infamous-freight-api.fly.dev"
  }
}
