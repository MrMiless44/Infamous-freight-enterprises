{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "framework": "nextjs",
  "buildCommand": "pnpm --filter infamous-freight-web build",
  "devCommand": "pnpm --filter infamous-freight-web dev",
  "installCommand": "pnpm install --frozen-lockfile",
  "outputDirectory": "src/apps/web/.next",
  "ignoreCommand": "git diff HEAD^ HEAD --quiet . ':(exclude)src/apps/api/**' ':(exclude)archive/**'",
  "github": {
    "silent": false,
    "enabled": true
  },
  "git": {
    "deploymentEnabled": true
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "https://infamous-freight-api.fly.dev/api/:path*"
    }
  ]
}
