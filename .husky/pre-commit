#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

# Run lint-staged on staged files
pnpm -s exec -- lint-staged
#!/usr/bin/env sh
set -eu

# Resolve repo root relative to this script so it works from any CWD
REPO_ROOT="$(cd -- "$(dirname "$0")/.." && pwd -P)"

# Ensure pnpm is available (prefer Corepack) and fall back to npx/npm
ensure_pnpm() {
  if command -v pnpm >/dev/null 2>&1; then
    if pnpm --version >/dev/null 2>&1; then
      return 0
    fi
  fi
  if command -v corepack >/dev/null 2>&1; then
    corepack enable >/dev/null 2>&1 || true
    corepack prepare pnpm@8.15.9 --activate >/dev/null 2>&1 || true
  fi
  pnpm --version >/dev/null 2>&1
}

validate_workflows() {
  echo "ğŸ” Validating GitHub Actions workflows..."
  if command -v actionlint >/dev/null 2>&1; then
    actionlint "$REPO_ROOT/.github/workflows/" || {
      echo "âš ï¸  actionlint issues found. Install: brew install actionlint (macOS) or see github.com/rhysd/actionlint"
      return 1
    }
  else
    echo "âš ï¸  actionlint not installed, skipping workflow validation"
  fi
}

run_lint_staged() {
  echo "ğŸ” Running lint-staged..."
  if ensure_pnpm; then
    (cd "$REPO_ROOT" && pnpm lint-staged)
  else
    echo "âŒ pnpm not found. Install with: corepack enable && corepack prepare pnpm@8.15.9 --activate"
    exit 1
  fi
}

if validate_workflows && run_lint_staged; then
  echo "âœ… Pre-commit checks passed!"
else
  echo "âŒ Pre-commit checks failed. Commit aborted."
  exit 1
fi
