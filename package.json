{
  "name": "infamous-freight-enterprise",
  "private": true,
  "version": "1.0.0",
  "packageManager": "pnpm@8.15.9",
  "engines": {
    "node": ">=20"
  },
  "workspaces": [
    "api",
    "web",
    "mobile",
    "packages/*"
  ],
  "scripts": {
    "dev": "pnpm -r dev",
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "lint": "pnpm -r lint",
