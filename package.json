{
  "name": "infamous-freight-enterprises",
  "version": "2.0.0",
  "description": "A modern full-stack freight management platform with AI-powered features, real-time voice capabilities, and integrated billing system",
  "private": true,
  "packageManager": "pnpm@8.15.9",
  "engines": {
    "node": ">=20.18.1 <21"
  },
  "type": "module",
  "prisma": {
    "schema": "api/prisma/schema.prisma"
  },
  "workspaces": [
    "api",
    "web",
    "packages/*",
    "e2e"
  ],
  "scripts": {
    "dev": "pnpm -r --parallel dev",
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "test:coverage": "pnpm -r test:coverage",
    "lint": "pnpm -r lint",
    "lint:fix": "pnpm -r lint:fix",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "check:types": "pnpm -r --filter \"./packages/*\" --filter ./web exec tsc --noEmit",
    "check:all": "pnpm lint && pnpm check:types && pnpm format:check",
    "prepare": "husky install || true",
    "clean": "pnpm -r clean && rm -rf node_modules",
    "api:dev": "pnpm --filter infamous-freight-api dev",
    "web:dev": "pnpm --filter infamous-freight-web dev",
    "e2e": "pnpm --filter e2e test"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "jest-junit": "^16.0.0",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "prisma": "^5.22.0"
  },
  "dependencies": {
    "botid": "^1.5.10"
  }
}
