{
  "name": "infamous-freight-enterprises",
  "version": "2.1.0",
  "description": "Infæmous Freight - AI-powered freight management platform",
  "author": "Santorio Djuan Miles",
  "license": "Proprietary",
  "copyright": "© 2025 Infæmous Freight. All Rights Reserved.",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.15.0"
  },
  "scripts": {
    "dev": "pnpm -C api dev",
    "dev:api": "pnpm -C api dev",
    "build": "pnpm -C packages/shared build && pnpm -C api build",
    "build:shared": "pnpm -C packages/shared build",
    "build:api": "pnpm -C api build",
    "start": "pnpm -C api start",
    "start:api": "pnpm -C api start",
    "test": "pnpm -C api test",
    "test:api": "pnpm -C api test",
    "test:e2e": "pnpm -C tests/e2e test",
    "test:coverage": "pnpm -C api test:coverage",
    "lint": "pnpm -C api lint",
    "lint:fix": "pnpm -C api lint:fix",
    "typecheck": "pnpm -C packages/shared typecheck && pnpm -C api typecheck",
    "clean": "pnpm -C api clean && pnpm -C packages/shared clean && rm -rf node_modules",
    "prisma:generate": "pnpm -C api prisma:generate",
    "prisma:migrate": "pnpm -C api prisma:migrate",
    "prisma:migrate:dev": "pnpm -C api prisma:migrate:dev",
    "prisma:studio": "pnpm -C api prisma:studio",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:rebuild": "docker-compose up -d --build",
    "prepare": "husky install"
  },
  "workspaces": [
    "api",
    "packages/*",
    "tests/e2e"
  ],
  "devDependencies": {
    "@playwright/test": "^1.47.0",
    "husky": "^8.0.3",
    "lint-staged": "^15.0.0",
    "prettier": "^3.0.0"
  },
  "packageManager": "pnpm@8.15.9"
}
